@model IEnumerable<Web_OnlineShop.ModelOnlineShop.ProductCategory>
@using Web_OnlineShop.DAO_OnlineShop
@{
    ProductCategoryDao productCategory = new ProductCategoryDao();
    
}    
@*@ViewBag.CategorySelect*@
<h2>Category</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->
    @foreach (var item in Model)
    {
       if(productCategory.getAllParent(item.ID).Count!=0)
       {
         <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordian" href="#@item.ID">
                  
                    <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                   
                    @item.Name
                </a>
            </h4>
        </div>
            
        <div id="@item.ID" class="panel-collapse collapse">
            <div class="panel-body">
                <ul>
                    @foreach (var item1 in productCategory.getAllParent(item.ID))
                    {
                        <li><a href="#">@item1.Name </a></li>
                    }
                   </ul>
            </div>
        </div>
             
    </div>
       }
       else
       {
            <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title"><a href="#">@item.Name</a></h4>
        </div>
    </div>
       }
    }
   </div>
